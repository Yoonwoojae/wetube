extends layouts/main
include mixins/videoBlock
include mixins/videoImg

block content
    .content
        p.title 내 동영상 목록
        #videoArea
            each item in videos
                +videoImg({
                    id: item.id,
                    title: item.title,
                    views: item.views,
                    videoFile: item.fileUrl
                })
    .content
        p.title 구독 중인 아티스트의 재생목록
        #videoArea
            each item in videos
                +videoImg({
                    id: item.id,
                    title: item.title,
                    views: item.views,
                    videoFile: item.fileUrl
                })
    .content
        p.title 맞춤 동영상
        #videoArea
            each item in videos
                +videoImg({
                    id: item.id,
                    title: item.title,
                    views: item.views,
                    videoFile: item.fileUrl
                })
